<!--index.wxml-->

<view class="container">
<view>
  <picker bindchange="bindTypeChange" value="{{typeIndex}}" range="{{typeArray}}">
    <view class="picker">
      点我选择练习类型：{{typeArray[typeIndex]}}
    </view>
  </picker>
</view>
<view>
  <picker bindchange="bindNumChange" value="{{numIndex}}" range="{{numArray}}">
    <view class="picker">
      点我选择练习数量：{{numArray[numIndex]}}题
    </view>
  </picker>
</view>
  <view class="userinfo" style='disable'>
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 开始 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <!-- <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view> -->
</view>
